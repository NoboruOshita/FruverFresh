        <TextBox x:Name="txtDireccion" HorizontalAlignment="Left" Height="28" Margin="317,256,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="296" FontFamily="Sitka Small" FontSize="18"/>
        <RadioButton x:Name="rbHombre" Content="HOMBRE" HorizontalAlignment="Left" Margin="317,180,0,0" VerticalAlignment="Top" FontFamily="Sitka Small" FontSize="18" Height="21" Width="102"/>
        <RadioButton x:Name="rbMujer" Content="MUJER" HorizontalAlignment="Left" Margin="513,180,0,0" VerticalAlignment="Top" FontFamily="Sitka Small" FontSize="18" Height="21" Width="100"/>
        <Label Content="GENERO" HorizontalAlignment="Left" Margin="223,174,0,0" VerticalAlignment="Top" FontFamily="Sitka Small" FontSize="18" Height="32" Width="89"/>
        <Label Content="DISTRITO" HorizontalAlignment="Left" Margin="213,210,0,0" VerticalAlignment="Top" FontFamily="Sitka Small" FontSize="18" RenderTransformOrigin="0.331,0.375" Height="32" Width="99"/>
        <Label Content="DIRECCIÓN" HorizontalAlignment="Left" Margin="195,252,0,0" VerticalAlignment="Top" FontFamily="Sitka Small" FontSize="18" Height="32" Width="116"/>
        <Label Content="CONTRASEÑA" HorizontalAlignment="Left" Margin="173,348,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.447,-0.154" FontFamily="Sitka Small" FontSize="18" Height="32" Width="138"/>
