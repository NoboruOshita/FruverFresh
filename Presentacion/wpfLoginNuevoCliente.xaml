        <Label Content="USUARIO" HorizontalAlignment="Left" Margin="213,308,0,0" VerticalAlignment="Top" Width="122" FontFamily="Sitka Small" FontSize="18" Height="32"/>
        <TextBox x:Name="txtUsuario" HorizontalAlignment="Left" Height="32" Margin="317,308,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="296"/>

    </Grid>
</Window>
