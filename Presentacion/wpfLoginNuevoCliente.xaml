                <GradientStop Color="#FF18D4D4" Offset="0.157"/>
                <GradientStop Color="#FF36BBBB" Offset="0.661"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Label Content="REGISTRO" HorizontalAlignment="Left" Margin="377,0,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="24" FontFamily="Sitka Small" Height="40" Width="150" Foreground="White"/>
        <Button Content="REGISTRAR" Margin="317,405,295,0" RenderTransformOrigin="0.459,2.1" FontFamily="Sitka Small" FontSize="18" FontWeight="Bold" Click="Button_Click_1" Height="50" VerticalAlignment="Top" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="images/btnContorno.png"/>
            </Button.Background>
        </Button>
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Height="28" Margin="317,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="296" FontFamily="Sitka Small" FontSize="18"/>
